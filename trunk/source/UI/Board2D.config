    </Piece>
    <Piece name="Pawn" StartingLocation="d2" ImageName="wp.png"  Player="1" Color = "white" >
    </Piece>
    <Piece name="Pawn" StartingLocation="e2" ImageName="wp.png"  Player="1" Color = "white" >

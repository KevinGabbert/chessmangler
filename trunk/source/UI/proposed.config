<?xml version="1.0" encoding="utf-8" ?>
<ChessConfig version="pre-alpha" name="Board2D">

  <BoardDef name="Board2D" rows="8" columns="8">

  </BoardDef>

  <UIDef>
    <UISquareLayout SquareSize="72">

    </UISquareLayout>

    <!-- For Custom weird Boards.. an example: -->
    <UICustomSquareLayout>
      <Square name="1" Location="" size="" sizemode="" BorderStyle="" />
      <Square name="2" Location="" size="" sizemode="" BorderStyle="" />
      <Square name="3" Location="" size="" sizemode="" BorderStyle="" />
      <Square name="4" Location="" size="" sizemode="" BorderStyle="" />
      <Square name="5" Location="" size="" sizemode="" BorderStyle="" />
    </UICustomSquareLayout>
  </UIDef>

  <PieceDef>
    <Piece name="All">
      <Movement>
        <Condition type="Not Checked">
          <Piece name="King"/>
        </Condition>
        <Condition type="Not Blocked">
          <Piece name="All"/>
        </Condition>
      </Movement>
    </Piece>
    <Piece name="Rook" StartingLocation="A1" ImageName="wr.gif">
      <Movement>
        <Orthogonal Distance ="All"/>
      </Movement>
      <Capture>
        <Orthogonal Distance ="All"/>
      </Capture>
    </Piece>
    <Piece name="King" StartingLocation="E4" ImageName="wr.gif" >
      <Movement>
        <Orthogonal Distance ="1"/>
        <Diagonal Distance ="1"/>
        <CustomMovement name="Castle" flag="once">
          <Condition Override="true"  type="Not Blocked">
            <Piece name="King"/>
            <Piece name="Rook"/>
          </Condition>      
          <Leaper Orthogonal="2" Direction="Descending">
            <ForceMove>
              <Piece name="Rook">
                <CustomMovement>
                  <Leaper Orthogonal ="2" Direction="Ascending"/>
                </CustomMovement>
              </Piece>
            </ForceMove>
            <Condition type="MyColor">
              <Attribute Color="white"/>
            </Condition>
            <Condition type="Has Not Moved">
              <Piece name="King"/>
              <Piece name="Rook"/>
            </Condition>
          </Leaper>
          <Leaper Orthogonal ="3"  Direction="Ascending">
            <ForceMove>
              <Piece name="Rook">
                <CustomMovement>
                  <Leaper Orthogonal ="3" Direction="Descending"/>
                </CustomMovement>
              </Piece>
            </ForceMove>
            <Condition type="MyColor">
              <Attribute Color="White"/>
            </Condition>
            <Condition type="Has Not Moved">
              <Piece name="King"/>
              <Piece name="Rook"/>
            </Condition>
          </Leaper>
          <Leaper Orthogonal="2" Direction="Descending">
            <ForceMove>
              <Piece name="Rook">
                <CustomMovement>
                  <Leaper Orthogonal ="3" Direction="Ascending"/>
                </CustomMovement>
              </Piece>
            </ForceMove>
            <Condition type="MyColor">
              <Attribute Color="black"/>
            </Condition>
            <Condition type="Has Not Moved">
              <Piece name="King"/>
              <Piece name="Rook"/>
            </Condition>
          </Leaper>
          <Leaper Orthogonal ="3"  Direction="Ascending">
            <ForceMove>
              <Piece name="Rook">
                <CustomMovement>
                  <Leaper Orthogonal ="2" Direction="Descending"/>
                </CustomMovement>
              </Piece>
            </ForceMove>
            <Condition type="MyColor">
              <Attribute Color="black"/>
            </Condition>
            <Condition type="Has Not Moved">
              <Piece name="King"/>
              <Piece name="Rook"/>
            </Condition>
          </Leaper>
        </CustomMovement>
      </Movement>
      <Capture>
        <Orthogonal Distance ="1"/>
        <Diagonal Distance ="1"/>
      </Capture>
    </Piece>
    <Piece name="Knight" StartingLocation="H3" ImageName="wr.gif">
      <Movement>
        <Leaper Orthogonal ="2" Diagonal ="1"/>
        <Condition Override="true" type="Not Blocked"/>
      </Movement>
      <Capture>
        <Leaper Orthogonal ="2" Diagonal ="1"/>
      </Capture>
    </Piece>  
  </PieceDef>

  <GameOverDef>
    <Condition type="Repetition">
      <Times Value="3"/>
      <Piece name="King"/>
    </Condition>
    <Condition type="CheckMate">
      <Piece name="King"/>
    </Condition>
    <Condition type="Piece Has not Moved in 50 moves">
      <Piece name="Pawn"/>
    </Condition>
    <Condition type="Pieces Remaining">
      <Piece name="Knight" Color="Any"/>
    </Condition>
    <Condition type="Pieces Remaining">
      <Piece name="Bishop" Color="OR"/>
    </Condition>
  </GameOverDef>
</ChessConfig>
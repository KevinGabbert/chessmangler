<?xml version="1.0" encoding="utf-8" ?>
<ChessConfig version="pre-alpha" name="Board2D">

  <!-- All this is subject to change at present -->

  <BoardDef name="Board2D" rows="8" columns="8">

  </BoardDef>

  <UIDef>
    <UISquareLayout SquareSize="72">

    </UISquareLayout>

    <!-- For Custom weird Boards.. an example: -->
    <UICustomSquareLayout>
      <Square name="1" Location="" size="" sizemode="" BorderStyle="" />
      <Square name="2" Location="" size="" sizemode="" BorderStyle="" />
      <Square name="3" Location="" size="" sizemode="" BorderStyle="" />
      <Square name="4" Location="" size="" sizemode="" BorderStyle="" />
      <Square name="5" Location="" size="" sizemode="" BorderStyle="" />
    </UICustomSquareLayout>
  </UIDef>

  <PieceDef>
    <Piece name="Rook" StartingLocation="A1" ImageName="wr.gif">
      <Movement>
        <Orthogonal Distance ="All"/>
      </Movement>
      <Capture>
        <Orthogonal Distance ="All"/>
      </Capture>
      <BlockedBy>
        <Piece type="All" Condition="Inbetween"/>
        <Piece type="King" Condition="InCheck"/>
        <Condition>
          <Piece name="King" what="Has not moved"/>
        </Condition>
      </BlockedBy>
    </Piece>
    <Piece name="King" StartingLocation="E4" ImageName="wr.gif" >
      <Movement>
        <Orthogonal Distance ="1"/>
        <Diagonal Distance ="1"/>
        <CustomMovement name="Castle">
          <Leaper Orthogonal="2" Direction="Descending">
            <ForceMove>
              <Piece name="Rook">
                <CustomMovement>
                  <Leaper Orthogonal ="2" Direction="Ascending"/>
                </CustomMovement>
              </Piece>
            </ForceMove>
            <Condition>
              <Attribute Color="white"/>
            </Condition>
            <Condition>
              <Piece name="King" what="Has not moved"/>
            </Condition>
            <Condition>
              <Piece name="Rook" what="Has not moved"/>
            </Condition>
          </Leaper>
          <Leaper Orthogonal ="3"  Direction="Ascending">
            <ForceMove>
              <Piece name="Rook">
                <CustomMovement>
                  <Leaper Orthogonal ="3" Direction="Descending"/>
                </CustomMovement>
              </Piece>
            </ForceMove>
            <Condition>
              <Attribute Color="White"/>
            </Condition>
            <Condition>
              <Piece name="King" what="Has not moved"/>
            </Condition>
            <Condition>
              <Piece name="Rook" what="Has not moved"/>
            </Condition>
          </Leaper>
          <Leaper Orthogonal="2" Direction="Descending">
            <ForceMove>
              <Piece name="Rook">
                <CustomMovement>
                  <Leaper Orthogonal ="3" Direction="Ascending"/>
                </CustomMovement>
              </Piece>
            </ForceMove>
            <Condition>
              <Attribute Color="black"/>
            </Condition>
            <Condition>
              <Piece name="King" what="Has not moved"/>
            </Condition>
            <Condition>
              <Piece name="Rook" what="Has not moved"/>
            </Condition>
          </Leaper>
          <Leaper Orthogonal ="3"  Direction="Ascending">
            <ForceMove>
              <Piece name="Rook">
                <CustomMovement>
                  <Leaper Orthogonal ="2" Direction="Descending"/>
                </CustomMovement>
              </Piece>
            </ForceMove>
            <Condition>
              <Attribute Color="black"/>
            </Condition>
            <Condition>
              <Piece name="King" what="Has not moved"/>
            </Condition>
            <Condition>
              <Piece name="Rook" what="Has not moved"/>
            </Condition>
          </Leaper>
        </CustomMovement>
      </Movement>
      <Capture>
        <Orthogonal Distance ="1"/>
        <Diagonal Distance ="1"/>
      </Capture>
      <BlockedBy>
        <Piece type="King" Condition="InCheck"/>
      </BlockedBy>
    </Piece>
    <Piece name="Knight" StartingLocation="H3" ImageName="wr.gif">
      <Movement>
        <Leaper Orthogonal ="2" Diagonal ="1"/>
      </Movement>
      <Capture>
        <Leaper Orthogonal ="2" Diagonal ="1"/>
      </Capture>
      <BlockedBy>
        <Piece type="King" Condition="InCheck"/>
      </BlockedBy>
    </Piece>  
  </PieceDef>
</ChessConfig>